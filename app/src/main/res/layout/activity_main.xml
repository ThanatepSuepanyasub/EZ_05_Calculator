<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_weight="1"
            android:gravity="bottom|right|end"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="C"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="Del"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/per"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="%"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="/"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="7"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="8"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="9"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="X"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="4"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="5"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="6"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/hyphen"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="-"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="2"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="3"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="+"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="108dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" >

            <Button
                android:id="@+id/b0"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="."
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:backgroundTint="#D7C6F8"
                android:text="="
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>